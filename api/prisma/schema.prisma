generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "mysql"
}

model User {
  id          String   @id @default(uuid())
  email       String   @unique
  name        String
  password    String   @unique
  phoneNumber Int      @unique
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Store {
  id        String @id @default(uuid())
  storeName String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model product {
  id           String @id @default(uuid())
  productName  String
  productStock Int
  productPrice Int

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
